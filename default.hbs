<!DOCTYPE html>

<html lang="{{@site.lang}}" class="csspositionsticky supports backgroundblendmode objectfit object-fit backgroundcliptext cssfilters cssmask backdropfilter">
    <head>
        {{! SITES META DATA }}
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="HandheldFriendly" content="True">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="theme-color" content="#6c5ba7"/>
        <title>{{meta_title}} {{^is "home, paged"}}| {{@site.title}}{{/is}}</title>
        <meta name="description" content="{{@site.description}}">
        <link rel="sitemap" type="application/xml" title="Sitemap" href="https://www.oakwave.coo/sitemap.xml" />
        <meta property="og:locale" content="en_US" />
        <link rel="alternate" type="application/rss+xml" href="https://www.oakwave.com/blog/rss/">
        <link rel="icon" href="{{asset "images/favicon.png"}}" type="image/x-icon"/>


        {{! DNS PREFETCH }}
        <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
        <link rel="dns-prefetch" href="https://code.jquery.com">
        <link rel="dns-prefetch" href="https://fonts.googleapis.com">
        
        <!--Fonts -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway&display=swap">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Slab:100,200,300,400&display=swap">


        <!-- Twitter cards -->
        <meta name="twitter:site"    content="{{@site.twitter}}">
        <meta name="twitter:creator" content="{{@site.twitter}}">
   
        <!-- Global Styles -->

        <link rel="stylesheet" href="{{asset "css/theme-vendors.min.css"}}" />
        <link rel="stylesheet" href="{{asset "built/css/theme.min.css"}}" />
        <link rel="stylesheet" href="{{asset "built/css/themes/original.css"}}" />
        <!--<link rel="stylesheet" href="{{asset "css/themes/fr eelancer.css"}}" />-->


        <!-- Page Styles -->

        {{{block "styles"}}}

        <!-- Global Libs & Vendors -->
        <script async src="{{asset "vendors/modernizr.min.js"}}"></script>
        <script src="https://kit.fontawesome.com/dd47f1ac1c.js" crossorigin="anonymous"></script>

        {{> "vendor/fbpixel"}}
        {{!> "vendor/quora"}}
        {{> "vendor/hotjar"}}
        {{> "vendor/drift"}}
        {{> "vendor/hatchbuck"}}



        <!-- The Almighty Ghost Head -->
        {{ghost_head}}

    </head>


    <body class="bg-dark {{body_class}} {{{block "body-parts"}}}" 
        data-mobile-nav-trigger-alignment="right" 
        data-mobile-nav-align="left" 
        data-mobile-nav-style="modern" 
        data-mobile-nav-shceme="gray" 
        data-mobile-header-scheme="gray" 
        data-mobile-nav-breakpoint="1199"
    >

	    <div id="wrap">
            {{{body}}}	
            {{^is "home"}}			
            {{> "layout/footer"}}
            {{/is}}
        </div>           
        

        {{> "vendor/hubspot"}}
        {{> "vendor/google-analytics"}}
        {{ghost_foot}}
        {{> "layout/global-scripts"}}

        {{{block "scripts"}}}

    </body>        
</html>
