{{!< default}}

{{! The tag above means: Insert everything in this file into the {body} of the default.hbs template. }}

{{#tag}}

<div class="page-info-wrapper post-presentation active lazy {{#if feature_image}}background{{else}}background-pattern{{/if}}"
{{#if feature_image}}data-src="{{feature_image}}"{{/if}}>
    <div class="gradient gradient1">
        <div class="container text-center">
            <div class="row">
                <div class="col-sm-12 col-md col-lg col-xs-12">
                    <h1 class="animated fadeInUp">{{t "Tag"}}: {{name}}</h1>
                    <p class="animated fadeInUp">{{description}}</p>
                </div>
            </div>
        </div>

        <!-- AUTHOR INFO -->
        <div class="author-wrapper post-presentation container">
            <div class="d-flex justify-content-between align-items-center animated fadeIn">
                <p class="author-post-count"><i class="fas fa-pencil-alt"></i> {{plural ../pagination.total empty=(t "No posts") singular=(t "1 post") plural=(t "% posts")}}</p>
            </div>
        </div>
    </div>
</div>

{{/tag}}

{{! Latest Post - Go to partials/latestPost.hbs to view this partial. }}
{{> "latestPost"}}

<div id="main">
    <div class="container">
        {{! Post Loop - Go to partials/postLoop.hbs to view this partial. }}
        {{> "postLoop"}}
    </div>
</div>

{{! Pagination - Go to partials/pagination.hbs to view this partial. }}
{{pagination}}
